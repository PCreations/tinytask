{
  "name": "tinytask",
  "version": "1.0.0",
  "description": "",
  "main": "dist/server.js",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build": "rm -rf dist && tsc",
    "start": "npm run db:migrate && node dist/server.js",
    "start:watch": "concurrently \"npm run db:migrate && tsc --watch\" \"node dist/server.js\"",
    "db:generate": "drizzle-kit generate:sqlite && npm run db:migrate",
    "db:migrate": "npm run build && node dist/db/migrate.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@swc/cli": "^0.1.63",
    "@swc/core": "^1.3.99",
    "@types/better-sqlite3": "^7.6.8",
    "@types/jest": "^29.5.10",
    "@types/node": "^20.10.0",
    "@types/node-fetch": "^2.6.9",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "chokidar": "^3.5.3",
    "concurrently": "^8.2.2",
    "drizzle-kit": "^0.20.4",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard-with-typescript": "^40.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.3.1",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "3.1.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "@fastify/type-provider-typebox": "^3.5.0",
    "@sinclair/typebox": "^0.31.28",
    "better-sqlite3": "^9.1.1",
    "drizzle-orm": "^0.29.0",
    "fastify": "^4.24.3"
  }
}
